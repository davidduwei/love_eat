page{
  height:100%;
  background: #faf8f8
}

input,.input-unreal{
  display:inline-block;
  border: 1rpx solid #ccc;
  border-radius: 5px;
  height: 30px;
  padding-left:10rpx;
  vertical-align: middle;
}
input{
  width:100%
}
input:hover,.input-unreal:hover{
  border: 1rpx solid #f8cac8;
}
.short-input{
  width: 80%;
  text-align:center;
}
.row-line-content textarea{
  display:inline-block;
  height: 150rpx !important;
  border:1px solid #ccc;
  width:100%;
  border-radius:5px;
  padding:20rpx 10rpx;
}

.row-line{
  min-height:55px;
  margin-top:15px;
}
.row-line-content{
  margin-top:15px;
}
.item-body{
  margin-top: 8px
}
.tag-style{
  display:inline-block;
  padding:10rpx 20rpx;
  margin-right:20rpx;
  border-radius:10rpx;
  border:1px solid #ff6f4c;
}
.container {
  padding: 0rpx 40rpx;
  font-size:16px;
} 
.display-flex{
  display: flex;
   flex-direction:row;
}
.flex-3{
  flex:3
}
.flex-5{
  flex:5
}
.flex-2{
  flex:2
}
.page-footer{
  width:100%;
  height: 150rpx;
  position: absolute;
  bottom:0;
  text-align: center
}
.page-footer .footer-btn{
    width: 150rpx;
    border-radius: 50rpx;
    background: blue;
  }
.table {
  border: 0px solid darkgray;
  margin: 10px;
}
.tr-color{
  background: #fff
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
 
}
.td {
    justify-content: center;
    text-align: center;
}
.td-flex-5{
  flex:5;
}
.td-flex-3{
  flex:3;
}
.td-flex-2{
  flex:2;
}
.td-flex-1{
  flex:1;
}
.td-flex-4{
  flex:4;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #E6F3F9;
}
.th {
  width: 40%;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}
.inline-box{
  display: inline-block;
  padding-right: 10px;
  height: 30px;
  line-height: 30px;
}
.submit-btn{
  margin:15px 0;
}
.submit-btn button{
  background: #f5634c
}
.active{
  background: #ff6f4c;
  color:#fff
}
