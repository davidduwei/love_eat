<import src="../template/template.wxml" />
<view class="container">
  <view class="row-line">
    <text class='item-head'>活动主题：</text>
    <view class='item-body'>
      <input type="text" placeholder="请输入主题" name="subject" bindinput='handleChangeInput'/>
    </view>
  </view>
  <view class="row-line">
    <text class='item-head'>活动标签：</text>
    <view class='item-body'>
      <text class="{{item.isChooses?'tag-style active':'tag-style'}}" id="{{item.id}}" wx:for = "{{tags}}" wx:key="id" bindtap='chooseHobby'>{{item.tagName}}</text>
    </view>
  </view>
  <view class="row-line">
    <text class='item-head'>活动时间：</text>
    <view class='item-body input-unreal'>
      <picker class="inline-box" mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">  
        <view class="picker">{{date}}</view>  
      </picker> 
      <picker class="inline-box" mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange">  
        <view class="picker">{{time}}</view>  
      </picker> 
    </view>
  </view>
  <view class="row-line">
    <text class='item-head'>人均花费：</text>
    <view class='item-body'>
      <input placeholder='输入人均经费' type="number" bindinput="handleInputMoney"/>
    </view>
  </view>
  <view class="row-line">
    <text class='item-head'>活动地点：</text><text>地址应该是带过来的吧</text>
    <view class='item-body'>
       <map id="map" scale="14" style="width: 100%; height: 150px;"></map>
    </view>
  </view>
  
  <view class="row-line">
      <text class='item-head'>联系方式：</text>
      <view class='item-body'>
        <input placeholder='电话/微信/QQ' bindinput="handleInputTelNum"/>
      </view>
  </view>
  <view class="row-line-content">
      <text class='item-head'>活动内容：</text>
     <view class='item-body'>
       <textarea class="textarea" type="text" placeholder='请输入活动内容' bindinput="handleInputContent"></textarea>
     </view>
  </view>
  <view class="submit-btn">
    <button size="default" type="primary" bindtap="handleSubmit">发布活动</button>
  </view>  
</view>